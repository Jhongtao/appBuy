/* pages/user/info.wxss */

page {
    background-color: #EEEEEE;
}

view.panel {
    width: calc(100% - 24px);
    margin: 12px;
    border-radius: 4px;
    box-sizing: border-box;
    overflow: hidden;
    background-color: #fff;
    padding: 4px 4px 16px 4px;
}

view.panel .panelhead {
    border-bottom: 1px solid #EEEEEE;
    font-size: 14px;
    padding: 4px 8px 8px 8px;
    color: #555;
    margin-bottom: 6px;
}

view.table {
    display: table;
    width: 100%;
    height: auto;
}

view.table>view {
    display: table-row;
}

view.table>view>view {
    display: table-cell;
    padding: 4px 6px;
    vertical-align: middle;
}

view.table>view>view:nth-of-type(1) {
    text-align: right;
    color: #999;
    font-size: 12px;
    /* border: 1px solid red; */
    width: 185rpx;
}

view.table>view>view:nth-of-type(2):not(:last-of-type) {
    font-size: 12px;
    color: #999;
}

view.table>view>view:nth-of-type(3) {
    width: 28px;
}

view.table>view>view:nth-last-of-type(1) {
    text-align: left;
    color: #333;
    font-size: 14px;
}

view.table>view>view>text {
    display: block;
    font-size: 14px;
    color: #333;
}

view.table>view image {
    width: 50px;
    display: inline-block;
    height: 50px;
}

view.table2>view>view {
    padding-top: 12px;
    padding-bottom: 12px;
}

view.table2>view:nth-of-type(n+2) view {
    border-top: 1px dashed #eee;
}

.nav {
    width: 70rpx;
    font-size: 35rpx;
}