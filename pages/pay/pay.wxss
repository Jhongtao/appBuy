/* pages/user/pay.wxss */
page{
  background-color:#EEEEEE;
}
view.panel{
  width:calc(100% - 24px);
  margin:12px;
  border-radius:4px;
  box-sizing:border-box; 
  overflow:hidden;
  background-color:#fff;
  padding:4px 4px 16px 4px;
  min-height:300px;
}

view.panel .panelhead{
  border-bottom:1px solid #EEEEEE;
  font-size:14px;padding:4px 8px 0 4px; height:29px;
  color:#555;margin-bottom:6px;
  overflow:hidden;
}

.panelhead text{display:inline-block;padding:0 8px 6px 8px;font-size:14px;}
.panelhead.s1 text:nth-of-type(1),.panelhead.s2 text:nth-of-type(2){
  color:#2D8CF0;border-bottom:2px solid #2D8CF0;margin-bottom:-1px;
}

view.alert{
  border:1px solid #F4B8BA;background-color:#FADCDC;
  border-radius:2px;margin:12px 6px;padding:12px 12px;
  color:#E1777B;font-size:14px;
}
view.alert::before{
  content: "\F378";font-family:'Ionicons';
  color:#E1777B;font-size:24px;display:block;float:left;position:relative;top:-2px;margin-right:9px;
}

view.info{
  border:1px solid #E4E4D0;
  background-color:#EDFED0;
  border-radius:2px;margin:12px 6px;padding:12px 12px;
  color:#B5DE70;font-size:14px;
}
view.info::before{
  content:"\F374";font-family:'Ionicons';
  font-size:24px;display:block;float:left;position:relative;top:-2px;margin-right:9px;
}

form{ margin:14px 0;}

form view{min-height:48px;position:relative;}

.model{
  width:calc(100vw - 50px);
  height:calc(100vh - 90px);
  position:fixed;
  z-index:99;
  left:25px;
  border-radius:12px;
  background-color:#fff;
  box-shadow:2px 2px 14px rgba(0,0,0,0.3);
  box-sizing:border-box;
  padding:4px;
  transition:top ease 0.3s;
}
.model+view{
  width:100vw;height:100vh;
  position:fixed;
  z-index:98;
  background-color:rgba(0,0,0,0.3);
  left:0;top:0;
}
.model.hide{
  top:100vh;
}
.model.hide+view{display:none;}
.model.show{
  top:75px;

}
.model.show+view{display:block;}

.modelhead{
  color:#555;
  border-bottom:1px solid #ddd;
  height:32px;
  box-sizing:border-box;
  padding:7px 0 0 12px;
}
.modelhead::after{
  position:absolute;
  content:"\f379";
  font-family:'Ionicons';
  right:6px;
  top:9px;
  width:28px;
  font-size:24px;
  text-align:right;
  border-left:1px solid #ddd;
  display:block;
}

.model scroll-view{
  width:100%;height:calc(100% - 50px);
  margin:0;
}

.model scroll-view text{display:block;font-size:13px;color:#666;line-height:1.3;text-indent:2em;}
.model scroll-view text.b{font-size:16px;font-weight:bold;text-indent:0;}
.modelfoot{
  border-top:1px solid #ddd;
  text-align:center;padding:6px 0 0 0
}

view.list{border:1px solid #ddd;font-size:13px;}

view.list >view{
display:flex;
flex-direction: row;
flex-wrap: wrap;
 background-color:#F8F8F9;
 padding-left:1px;
 align-items:stretch;
}
view.list > view >text{
  width:80px;
  flex:80px 1 1;
  word-break:break-all;
  padding:3px 2px 4px 2px;
  text-align:center;
  margin:1px 1px 0 0;
  background-color:#fff;
  color:#555;
}
view.list > view:first-of-type{
 border-bottom:1px solid #ddd;
  background-color:#fff;
}
view.list > view:first-of-type >text{
  background-color:#f8f8f9;
  color:#000;
}

view.list > view >text:only-child{
  width:100%;
  padding:20px 0 24px 0;
  color:#999;
}

view.table{display:table;margin:0 8px;width:calc(100% - 16px);}
view.table>view{display:table-row;}
view.table>view>view{display:table-cell;padding:6px 6px;border-bottom:1px solid #eee;vertical-align:top; word-break:break-all;}
view.table>view>view:first-of-type{
  box-sizing:border-box;
  font-size:14px;width:82px;
  color:#555;text-align:right;
}
view.table>view>view:nth-of-type(2){
  color:#999;
  font-size:14px;
}
view.table>view>view>text{
  color:#2655b6;display:inline-block;margin-left:12px;
}
view.h{text-align:center;padding:8px 0;margin:0 8px;color:#555;border-bottom:1px solid #eee;}

.model scroll-view{
  width:calc(100% - 20px);height:calc(100% - 86px);
  margin: 6px 10px;
}

.model scroll-view text{display:block;font-size:13px;color:#666;line-height:1.3;text-indent:2em;padding:3px 0;}
.model scroll-view text.red{color:red;}
.modelfoot{
  border-top:1px solid #ddd;
  text-align:center;padding:6px 0 0 0;
}
.modelfoot button:last-of-type{
  background-color:#2655B6;background-image:linear-gradient(to top,#2E63BF,#4882E6);
  color:#fff;
}
.modelfoot button:nth-last-of-type(2){
  margin-right:12px;
}