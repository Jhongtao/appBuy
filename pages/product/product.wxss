swiper {
    width: 100vw;
    height: 50vw;
}

swiper image {
    width: 100%;
    height: 100%;
}

.actionbar {
    width: 100vw;
    box-sizing: border-box;
    height: 40px;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 100;
    box-shadow: 0 0 18px #fff;
}

.actionbar>view {
    box-sizing: border-box;
    display: inline-block;
    height: 40px;
    vertical-align: top;
    font-size: 14px;
    text-align: center;
}

.actionbar>view:nth-of-type(1).view-history {
    width: 0;
    margin-left: 15rpx;
}

.actionbar>view:nth-of-type(1),
.actionbar>view:nth-of-type(2) {
    width: 20%;
    border-top: 1px solid #ddd;
    font-size: 24px;
    padding-top: 12px;
    color: #666;
    background-color: #fff;
}


/* .actionbar>view:nth-of-type(1) {
    border-right: 1px solid #ddd;
} */

.title-info {
    width: 750rpx;
    box-sizing: border-box;
    /* padding: 0 30rpx; */
}

.title-info view:nth-of-type(1) {
    /* background-color: #ff0036; */
    height: 80rpx;
    line-height: 80rpx;
}

.title-info view:nth-of-type(1) text:nth-of-type(1) {
    padding: 0 0 0 40rpx;
    color: #5f5f5f;
}

.title-info view:nth-of-type(1)>text.seller {
    padding: 0 60rpx;
}

.title-info view {
    display: flex;
    justify-content: space-between;
}

.title-info view:nth-of-type(1) text.single-price {
    padding: 0;
    color: #f20;
    font-size: 42rpx;
    font-weight: 700;
    font-style: italic;
}

.single-title,
.seller {
    color: #5f5f5f;
    font-size: 30rpx;
}

.pro-title,
.pro-real {
    color: #5f5f5f;
    font-size: 30rpx;
    padding: 10rpx 40rpx;
}

.actionbar>view:nth-of-type(2) {
    position: relative;
}

.actionbar>view:nth-of-type(2)>text {
    position: absolute;
    display: block;
    background-color: red;
    color: #fff;
    width: 18px;
    height: 18px;
    line-height: 18px;
    text-align: center;
    border-radius: 9px;
    left: -5px;
    top: -5px;
    font-size: 12px;
    font-weight: bold;
}

.contain {
    padding: 0 20rpx 20rpx;
}

.contain-text {
    color: #5f5f5f5f;
    font-size: 30rpx;
    text-align: justify;
}


/* .actionbar>view:nth-of-type(1)::before {
    content: "\f3e2";
    font-family: 'Ionicons';
} */

.actionbar>view:nth-of-type(2)::before {
    content: "\f36d";
    font-family: 'Ionicons';
}

.actionbar>view:nth-of-type(3) {
    width: 38%;
    background-color: #FF0036;
    color: #fff;
    padding-top: 10px;
    border: 1px solid #ff0036;
    box-shadow: 1px 1px 0 #FF809A inset, -1px -1px 0 #BF0028 inset;
}

.actionbar>view:nth-of-type(4) {
    width: 40%;
    background-color: #FFE4D0;
    border: 1px solid #f0cab6;
    padding-top: 10px;
    color: #e5511d;
    text-shadow: 1px solid #fff;
    box-shadow: 1px 1px 0 #FFF2E8 inset, -1px -1px 0 #BFAB9C inset;
}

.model {
    width: calc(100vw - 50px);
    height: calc(100vh - 90px);
    position: fixed;
    z-index: 99;
    left: 25px;
    border-radius: 12px;
    background-color: #fff;
    box-shadow: 2px 2px 14px rgba(0, 0, 0, 0.3);
    box-sizing: border-box;
    padding: 4px;
    transition: top ease 0.3s;
}

.model+view {
    width: 100vw;
    height: 100vh;
    position: fixed;
    z-index: 98;
    background-color: rgba(0, 0, 0, 0.3);
    left: 0;
    top: 0;
}

.model.hide {
    top: 100vh;
}

.model.hide+view {
    display: none;
}

.model.show {
    top: 25px;
}

.model.show+view {
    display: block;
}

.modelhead {
    color: #555;
    border-bottom: 1px solid #ddd;
    height: 32px;
    box-sizing: border-box;
    padding: 7px 0 0 12px;
}

.modelhead::after {
    position: absolute;
    content: "\f379";
    font-family: 'Ionicons';
    right: 6px;
    top: 9px;
    width: 28px;
    font-size: 24px;
    text-align: right;
    border-left: 1px solid #ddd;
    display: block;
}

.order {
    width: 100vw;
    height: 280px;
    display: block;
    position: fixed;
    z-index: 102;
    left: 0;
    bottom: 0;
    background-color: #fff;
    transition: top ease 0.2s;
}

.order>.closebtn {
    position: absolute;
    right: 6px;
    top: 6px;
    width: 28px;
    height: 24px;
    font-size: 24px;
    text-align: right;
    border-left: 1px solid #ddd;
    display: block;
}

.orderhead {
    color: #555;
    padding: 9px 8px 5px 8px;
    margin: 0 4px 0 4px;
    border-bottom: 1px solid #ddd;
    height: 36px;
    box-sizing: border-box;
}

.order>.closebtn::before {
    content: "\f379";
    font-family: 'Ionicons';
    color: #555;
    position: relative;
    top: 4px;
}

.order.show {
    top: calc(100vh - 295px);
}

.order.hide {
    top: 100vh;
}

.order+view {
    position: fixed;
    width: 100vw;
    height: 100vh;
    z-index: 101;
    left: 0;
    top: 0;
    background-color: rgba(0, 0, 0, 0.3);
}

.order.hide+view {
    display: none;
}

.order.show+view {
    display: block;
}

