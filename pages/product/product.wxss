view.addbtn {
    width: 100vw;
    background-color: #FF0036;
    height: 110rpx;
    line-height: 60rpx;
    color: #fff;
    padding-top: 8px;
    border: 1px solid #ff0036;
    box-shadow: 1px 1px 0 #FF809A inset, -1px -1px 0 #BF0028 inset;
    text-align: center;
}

scroll-view.product,
view.product {
    width: 100vw;
    height: calc(100vh - 60px);
    position: fixed;
    top: 20px;
    left: 0;
}

view.product>image {
    width: 50vw;
    display: block;
    margin: 36px auto;
}

scroll-view.CartGoods,
scroll-view.history {
    width: calc(100vw - 58px);
    height: calc(100vh - 138px);
}

view.title {
    width: 100vw;
    height: 60px;
    position: fixed;
    left: 0;
    top: 0;
    background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.2) 0, rgba(0, 0, 0, 0.1) 20px, rgba(0, 0, 0, 0) 60px);
    box-sizing: border-box;
    padding: 6px 12px 0 12px;
    color: #fff;
    z-index: 8;
    text-shadow: 1px 1px #000;
}

view.title>text:nth-of-type(1) {
    font-weight: bold;
    font-size: 16px;
    margin-right: 24px;
}

view.title>text:nth-of-type(2) {
    font-size: 12px;
    font-weight: normal;
}

view.item {
    border: 2px solid #ddd;
    margin: 5px 10px;
    padding: 0;
    box-sizing: border-box;
    background-color: #fff;
    height: auto;
    min-height: 46px;
}

view.item.active {
    border: 2px solid #B60B00;
    background-color: #FFE4D0;
}

view.item.active>text {
    color: #B60B00;
}

view.item.active>image {
    border: 1px solid#B60B00;
    background-color: #fff;
}

view.item>image {
    width: 32px;
    height: 32px;
    border: 1px solid #ddd;
    padding: 1px;
    box-sizing: border-box;
    display: inline-block;
    vertical-align: top;
    margin: 5px 5px 1px 5px;
}

view.item>text {
    width: calc( 100% - 57px);
    height: 33px;
    display: inline-block;
    padding-top: 4px;
    color: #666;
    margin: 5px 0 0 0;
}

view.item>view {
    display: none;
}

view.item.active>view {
    background-color: #B60B00;
    color: #fff;
    display: block;
    font-size: 12px;
    text-align: right;
    padding: 0 6px 0 0;
}

text.del {
    text-decoration: line-through;
}

text.highlight {
    font-size: 1.5em;
    font-weight: bold;
    font-family: Georgia;
}

view.bar {
    height: 36px;
    box-sizing: border-box;
    overflow: hidden;
    margin-bottom: 12px;
    background-image: linear-gradient(to bottom, rgba(192, 224, 255, 0.3) 0px, transparent 6px, transparent 35px, #DCDEE2 36px);
}

view.bar text {
    display: block;
    float: left;
    font-size: 12px;
    color: #999;
    padding: 10px 10px 0 10px;
    height: 36px;
    box-sizing: border-box;
}

view.bar text.active {
    color: #2d8cf0;
    border-bottom: 2px solid #2d8cf0;
}

view.desc image {
    display: block;
    margin: 0 auto;
    max-width: 100vw;
}

view.table {
    margin: 12px;
    display: table;
    width: calc(100vw - 24px);
}

view.table>view {
    display: table-row;
}

view.table>view>view {
    display: table-cell;
    padding: 4px 6px;
}

view.table>view>view:nth-of-type(1) {
    text-align: right;
    color: #999;
    font-size: 12px;
}

view.table>view>view:nth-of-type(2) {
    text-align: left;
    color: #333;
    font-size: 14px;
}

view.check {
    padding: 6px 12px;
}

view.check>text {
    display: block;
    font-size: 14px;
    padding: 6px 0;
    color: #333;
}

view.check>text::before {
    content: "\F372";
    font-family: 'Ionicons';
    color: #999;
    font-size: 18px;
    display: inline-block;
    vertical-align: text-bottom;
    margin-right: 2px;
}

view.cate>text:nth-last-child(n+2)::after {
    content: "Â»";
    margin-left: 6px;
    margin-right: 6px;
}

view.cate>navigator {
    color: #2d8cf0;
    text-decoration: underline;
}

view.orderinfo {
    margin: 0 4px;
    padding: 6px 8px;
    box-sizing: border-box;
    height: 155px;
}

view.orderinfo>image {
    width: 72px;
    height: 72px;
    display: inline-block;
    vertical-align: top;
    box-sizing: border-box;
    border: 1px solid #ddd;
    padding: 1px;
    margin: 0 12px 0 0;
    background-color: #fff;
    background-clip: content-box;
}

view.orderinfo>text {
    font-weight: bold;
    text-shadow: 1px 1px 0 #fff, 2px 2px 2px #ccc;
    display: inline-block;
    height: 72px;
    width: calc(100% - 84px);
    line-height: 72px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

view.orderinfo>view {
    font-size: 14px;
    height: auto;
    padding: 3px 0;
    color: #555;
    position: relative;
    margin-left: 28px;
}

view.orderinfo text {
    display: inline-block;
}

view.orderinfo text.gray {
    font-size: 12px;
    color: #999;
    margin-right: 4px;
    width: 52px;
    text-align: right;
}

view.orderinfo text.highlight {
    color: #0080ff;
}

text.cn {
    border-bottom: 1px dotted #555;
    font-weight: 600;
    font-size: 16px;
    max-width: calc(100% - 92px);
    height: 22px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    position: relative;
    top: 6px;
}

view.toggle {
    font-size: 36px;
    position: absolute;
    right: 0;
    top: 8px;
    box-sizing: border-box;
    color: #ddd;
}

view.toggle::before {
    content: '\F340';
    font-family: 'Ionicons';
}

view.toggle2 {
    font-size: 36px;
    position: absolute;
    right: 0;
    top: 8px;
    box-sizing: border-box;
    color: #aaa;
}

view.listitem {
    margin: 0 6px 6px 6px;
    width: calc(100% - 12px);
    padding-bottom: 6px;
    border-bottom: 1px solid #eee;
}

view.listitem>view:first-of-type {
    width: 68px;
    display: inline-block;
    vertical-align: top;
}

view.listdt {
    color: #555;
    font-size: 13px;
    white-space: nowrap;
    padding: 4px 6px;
    border-bottom: 1px solid #eee;
    margin-bottom: 3px;
}

view.listitem>view:first-of-type>image {
    width: 68px;
    height: 68px;
    box-sizing: border-box;
    padding: 1px;
    border: 1px solid #eee;
    margin: 6px 0;
    background-color: #fff;
}

view.listitem>view:nth-of-type(2) {
    width: calc(100% - 68px);
    box-sizing: border-box;
    padding-left: 8px;
    display: inline-block;
    vertical-align: top;
}

view.listitem>view:nth-of-type(2)>text:first-of-type {
    font-size: 14px;
    line-height: 20px;
    display: block;
    margin-bottom: 6px;
}

view.listitem>view:nth-of-type(2)>text:nth-of-type(2) {
    font-size: 13px;
    color: #A34C3D;
    display: block;
    margin-bottom: 6px;
}

view.listitem>view:nth-of-type(2)>text:nth-of-type(3) {
    font-size: 12px;
    color: #999;
    display: block;
}

