page{
  background-color:#EEEEEE;
}
view.panel{
  width:calc(100% - 24px);
  margin:12px;
  border-radius:4px;
  box-sizing:border-box; 
  overflow:hidden;
  background-color:#fff;
  padding:4px 4px 16px 4px;
  min-height:300px;
}

view.panel .panelhead{
  border-bottom:1px solid #EEEEEE;
  font-size:14px;padding:4px 8px 0 4px; height:29px;
  color:#555;margin-bottom:6px;
  overflow:hidden;
}

.panelhead text{display:inline-block;padding:0 8px 6px 8px;font-size:14px;}
.panelhead.s1 text:nth-of-type(1),.panelhead.s2 text:nth-of-type(2),.panelhead.s3 text:nth-of-type(3),.panelhead.s4 text:nth-of-type(4),.panelhead.s5 text:nth-of-type(5){
  color:#2D8CF0;border-bottom:2px solid #2D8CF0;margin-bottom:-1px;
}

view.listhead{margin-top:4px;}
view.listhead,view.listitem{
  display:flex;
  margin-left:4px;margin-right:4px;
  background-color:#eee;
  flex-direction: row;
  /*justify-content: space-around;*/
}
view.listhead>view,view.listitem>view{
  font-size:14px;
  width:80px;
  flex:auto 1 1;
  padding:6px 4px;
  text-align:center;
  border-top:1px solid #fff;
  box-sizing:border-box;
  color:#555;
}


view.listhead+scroll-view{
  height:calc(100vh - 136px);
  width:calc(100vw - 32px);
}

view.listitem{border:1px solid #eee;background-color:transparent;border-top:none;}
view.listitem>view{padding:2px 6px;box-sizing:border-box;justify-content:center;
display:flex;align-items:center;flex-direction:column;
}
view.listitem>view:nth-of-type(2){
  color:#E20300;
}
view.listitem>view:nth-of-type(3){
  color:#999;font-size:12px;
}
view.listitem>view:nth-of-type(4) navigator{
  color:#2D8CF0;
}
