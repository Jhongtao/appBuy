/* pages/user/login.wxss */

.masthead{
  border-bottom:1px solid #ccc;
  margin:4px;text-align:center;
  color:#ccc;height:46px;
  box-sizing:border-box;
}

scroll-view{
  width:100vw;
  height:calc(100vh - 54px);
}
.masthead>navigator,.masthead>text{display:inline-block;
padding:12px 24px;
}

.masthead>text{color:#2655B6;}
.masthead>navigator{color:#555555}
form{
  margin:14px;
  display:block;
}

form label{display:none;}
form view{min-height:48px;position:relative;}
form text{font-size:12px;color:#bbb;margin-bottom:12px;display:block;text-align:right;}


form view>navigator{margin-top:36px;font-size:12px;color:#999;display:block;text-align:center;}