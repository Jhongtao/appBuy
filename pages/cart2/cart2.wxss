/* pages/user/cart2.wxss */
scroll-view.list{
  height:calc(100vh - 126px);
  width:calc(100vw);background-color:#f1f2f3;
}
text.card::before{content: "\F164";font-family:'Ionicons';font-size:24px;margin-right:6px;color:#2080D0;display:inline-block;vertical-align:top;}
view.listdt{color:#555;font-size:13px;padding:6px 8px;white-space: nowrap;box-sizing:border-box;width:100%;overflow:hidden;text-overflow:ellipsis;margin-top:12px;background-color:#fff;border-bottom:1px solid #eee;}
view.listbg{padding:12px;min-height:40px;box-sizing:border-box;background-color:#fff;}
view.listitem{margin:0;width:100%;border-bottom:1px solid #eee;}
view.listitem>view:first-of-type{
  width:68px;
  display:inline-block;
  vertical-align:top;
}
view.listitem>view:first-of-type > image{width:68px;height:68px;box-sizing:border-box;padding:1px;border:1px solid #eee;margin: 6px 0;background-color:#fff;}
view.listitem>view:nth-of-type(2){
  width:calc(100% - 68px);
  box-sizing:border-box;
  padding-left:8px;
  display:inline-block;
  vertical-align:top;
}
view.listitem>view:nth-of-type(2)>text:first-of-type{
font-size:14px;line-height:20px;display:block;margin-bottom:6px;}

view.listitem>view:nth-of-type(2)>text:nth-of-type(2){
font-size:13px;color:#A34C3D;display:block;margin-bottom:6px;
}
view.listitem>view:nth-of-type(2)>text:nth-of-type(3){
font-size:12px;color:#999;display:block;
}

view.actionbar{position:fixed;width:100vw;height:40px;left:0;bottom:0px;background-image:linear-gradient(to bottom,#ccc 0, #fff 1px);background-color:#fff;box-sizing:border-box;display:flex;}
view.actionbar>view{flex:auto 1 1;padding-left:12px;color:#555;padding-top:10px;font-size:13px;}
view.actionbar>view:last-of-type{width:85px;flex:auto 0 0;background-color:#3A69B9;color:#fff;
text-align:center;padding-top:12px;}


.model{
  width:calc(100vw - 50px);
  height:calc(100vh - 90px);
  position:fixed;
  z-index:99;
  left:25px;
  border-radius:12px;
  background-color:#fff;
  box-shadow:2px 2px 14px rgba(0,0,0,0.3);
  box-sizing:border-box;
  padding:4px;
  transition:top ease 0.3s;
}
.model+view{
  width:100vw;height:100vh;
  position:fixed;
  z-index:98;
  background-color:rgba(0,0,0,0.3);
  left:0;top:0;
}
.model.hide{
  top:100vh;
}
.model.hide+view{display:none;}
.model.show{
  top:25px;

}
.model.show+view{display:block;}

.modelhead{
  color:#555;
  border-bottom:1px solid #ddd;
  height:32px;
  box-sizing:border-box;
  padding:7px 0 0 12px;
}
.modelhead::after{
  position:absolute;
  content:"\f379";
  font-family:'Ionicons';
  right:6px;
  top:9px;
  width:28px;
  font-size:24px;
  text-align:right;
  border-left:1px solid #ddd;
  display:block;
}

.model scroll-view{
  width:calc(100% - 20px);height:calc(100% - 86px);
  margin: 6px 10px;
}

view.table{display:table;margin:0 8px;width:calc(100% - 16px);}
view.table>view{display:table-row;}
view.table>view>view{display:table-cell;padding:6px 6px;border-bottom:1px solid #eee;vertical-align:top; word-break:break-all;}
view.table>view>view:first-of-type{
  box-sizing:border-box;
  font-size:14px;width:82px;
  color:#555;text-align:right;
}
view.table>view>view:nth-of-type(2){
  color:#999;
  font-size:14px;
}
view.table>view>view>text{
  color:#2655b6;display:inline-block;margin-left:12px;
}