page {
    background-color: #EEEEEE;
}

view.panel {
    width: calc(100% - 24px);
    margin: 12px;
    border-radius: 4px;
    box-sizing: border-box;
    overflow: hidden;
    background-color: #fff;
    padding: 4px 4px 16px 4px;
    min-height: 300px;
}

view.panel .panelhead {
    border-bottom: 1px solid #EEEEEE;
    font-size: 14px;
    padding: 4px 8px 0 4px;
    height: 29px;
    color: #555;
    margin-bottom: 6px;
    overflow: hidden;
}

.panelhead text {
    display: inline-block;
    padding: 0 8px 6px 8px;
    font-size: 12px;
}

.panelhead.s1 text:nth-of-type(1),
.panelhead.s2 text:nth-of-type(2),
.panelhead.s3 text:nth-of-type(3),
.panelhead.s4 text:nth-of-type(4),
.panelhead.s5 text:nth-of-type(5) {
    color: #2D8CF0;
    border-bottom: 2px solid #2D8CF0;
    margin-bottom: -1px;
}

view.listhead {
    margin-top: 4px;
}

view.listhead,
view.listitem {
    display: flex;
    margin-left: 4px;
    margin-right: 4px;
    background-color: #eee;
    flex-direction: row;
    /*justify-content: space-around;*/
}

view.listhead>view,
view.listitem>view {
    font-size: 14px;
    width: 80px;
    flex: auto 1 1;
    padding: 6px 4px;
    text-align: center;
    border-top: 1px solid #fff;
    box-sizing: border-box;
    color: #555;
}

view.listhead+scroll-view {
    height: calc(100vh - 136px);
    width: calc(100vw - 32px);
}

view.listitem {
    border: 1px solid #eee;
    background-color: transparent;
    border-top: none;
}

view.listitem>view {
    padding: 2px 6px;
    box-sizing: border-box;
    justify-content: center;
    display: flex;
    align-items: center;
    flex-direction: column;
}

view.listitem>view:nth-of-type(2) {
    color: #E20300;
}

view.listitem>view:nth-of-type(3) {
    color: #999;
    font-size: 12px;
}

view.listitem>view:nth-of-type(4) navigator {
    color: #2D8CF0;
}

text.edit {
    color: #fff;
    font-size: 28rpx;
    background-color: #2D8CF0;
    padding: 10rpx 20rpx;
    margin: 5rpx;
}

text.del {
    color: #fff;
    font-size: 28rpx;
    border-radius: 5rpx;
    background-color: red;
    padding: 10rpx 20rpx;
    margin: 5rpx;
}

.invoice-edit {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0, 0, 0, .2);
    display: flex;
    justify-content: center;
    align-items: center;
}

.from-content {
    box-sizing: border-box;
    width: 600rpx;
    height: 650rpx;
    overflow-y: scroll;
    background-color: #fff;
    border-radius: 10rpx;
}

.invoice-edit .from-content .title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx 10rpx;
}

.invoice-edit .from-content .title text {
    font-size: 38rpx;
    color: #000;
    font-weight: 700;
    margin-bottom: 0;
    padding: 20rpx 30rpx;
}

.invoice-edit .content .list-item {
    display: flex;
    height: 100rpx;
    /* border: 1px solid red; */
    justify-content: space-between;
    padding: 0 20rpx;
    align-items: center;
}

.invoice-edit .content .list-item>view {
    font-size: 30rpx;
    color: #5f5f5f;
    flex: 0, 0, 220rpx;
    flex-basis: 220rpx;
    justify-content: flex-end;
    align-items: center;
    display: flex;
    padding: 0 10rpx;
}

.invoice-edit .content .list-item .picker,
.invoice-edit .content .list-item input {
    width: 320rpx;
}

.invoice-edit .content .list-item button {
    width: 180rpx;
    height: 80rpx;
    font-size: 30rpx;
    border-radius: 10rpx;
    height: 80rpx;
    background-color: #2655B6;
    font-weight: 700;
    line-height: 80rpx;
    color: #f5f5f5;
    box-sizing: border-box;
}