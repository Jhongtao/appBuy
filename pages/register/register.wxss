/* pages/user/register.wxss */

.masthead{
  border-bottom:1px solid #ccc;
  margin:4px;text-align:center;
  color:#ccc;height:46px;
  box-sizing:border-box;
}

msthead+scroll-view{
  width:100vw;
  height:calc(100vh - 54px);
}
.masthead>navigator,.masthead>text{display:inline-block;
padding:12px 24px;
}

.masthead>text{color:#2655B6;}
.masthead>navigator{color:#555555}
form{  margin:14px;}
view.check{min-height:40px;color:#555555;}

form label{display:none;}
form view{min-height:48px;position:relative;}

form input.invalid~text{
  color:#c00;
}
form input.invalid~text::before{
  content:'\F378';
  font-family:'Ionicons';
  color:#c00;margin-right:6px;
  font-size:18px;position:relative;top:3px;
}

form input.valid~text::before{
  content:'\F374';
  font-family:'Ionicons';
  color:#0c0;margin-right:6px;
  font-size:18px;position:relative;top:3px;
}

.model{
  width:calc(100vw - 50px);
  height:calc(100vh - 90px);
  position:fixed;
  z-index:99;
  left:25px;
  border-radius:12px;
  background-color:#fff;
  box-shadow:2px 2px 14px rgba(0,0,0,0.3);
  box-sizing:border-box;
  padding:4px;
  transition:top ease 0.3s;
}
.model+view{
  width:100vw;height:100vh;
  position:fixed;
  z-index:98;
  background-color:rgba(0,0,0,0.3);
  left:0;top:0;
}
.model.hide{
  top:100vh;
}
.model.hide+view{display:none;}
.model.show{
  top:25px;

}
.model.show+view{display:block;}

.modelhead{
  color:#555;
  border-bottom:1px solid #ddd;
  height:32px;
  box-sizing:border-box;
  padding:7px 0 0 12px;
}
.modelhead::after{
  position:absolute;
  content:"\f379";
  font-family:'Ionicons';
  right:6px;
  top:9px;
  width:28px;
  font-size:24px;
  text-align:right;
  border-left:1px solid #ddd;
  display:block;
}

.model scroll-view{
  width:calc(100% - 20px);height:calc(100% - 86px);
  margin: 6px 10px;
}

.model scroll-view text{display:block;font-size:13px;color:#666;line-height:1.3;text-indent:2em;}
.model scroll-view text.b{font-size:16px;font-weight:bold;text-indent:0;}
.modelfoot{
  border-top:1px solid #ddd;
  text-align:center;padding:6px 0 0 0
}
.modelfoot button:first-of-type{
  margin-right:12px;
}
.modelfoot button:last-of-type{
  background-color:#2655B6;background-image:linear-gradient(to top,#2E63BF,#4882E6);
  color:#fff;
}